<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 둥근 모서리 -->
    <corners android:radius="12dp" />

    <!-- 배경색 (흰색 카드 느낌) -->
    <solid android:color="@android:color/white" />

    <!-- 약간의 테두리 -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- 그림자 대신 elevation -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
