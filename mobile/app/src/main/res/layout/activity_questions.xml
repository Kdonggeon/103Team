<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content_layout"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/bottom_navigation">

        <!-- 상단 툴바 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/green"
            app:title="QnA"
            app:titleTextColor="@color/white" />

        <!-- 학원 선택 스피너 (숨김 처리 예정) -->
        <Spinner
            android:id="@+id/spinner_academy"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:layout_margin="16dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/spinner_bg_with_arrow"
            android:visibility="gone"/>

        <!-- 로딩 ProgressBar -->
        <ProgressBar
            android:id="@+id/pb_loading_questions"
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:indeterminate="true"
            android:visibility="gone" />

        <!-- 안내 메시지 -->
        <TextView
            android:id="@+id/main_content_text_questions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="질문 목록을 불러오는 중..."
            android:visibility="gone"
            android:padding="8dp" />

        <!-- 질문 목록 RecyclerView -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_questions"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"/>
    </LinearLayout>

    <!-- ▼ 네비게이션바 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"
        android:background="@drawable/bg_bottom_nav_rounded"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="selected"
        android:elevation="8dp"/>

    <!-- ▼ 네비게이션 숨기기 버튼 (가운데 정렬) -->
    <ImageButton
        android:id="@+id/btn_hide_nav"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@id/bottom_navigation"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@android:drawable/arrow_down_float"
        android:contentDescription="네비게이션 숨기기"/>

    <!-- ▲ 네비게이션 보이기 버튼 (가운데 정렬) -->
    <ImageButton
        android:id="@+id/btn_show_nav"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@android:drawable/arrow_up_float"
        android:visibility="gone"
        android:contentDescription="네비게이션 보이기"/>
</RelativeLayout>
