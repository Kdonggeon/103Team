<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 메인 컨텐츠 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 툴바 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_setting"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/green"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:title="설정"
            android:titleTextColor="@android:color/white" />

        <!-- 색상 선택 그리드 (카드 배경 동일 적용) -->
        <GridLayout
            android:id="@+id/color_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_setting"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:rowCount="2"
            android:background="@drawable/bg_theme_color_group"
            android:padding="16dp" />

        <!-- 인앱 알림 카드 (XML에서 동일 스타일 적용) -->
        <LinearLayout
            android:id="@+id/box_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/color_grid"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_theme_color_group"
            android:padding="16dp"
            android:clickable="false"
            android:focusable="false">

            <TextView
                android:id="@+id/tv_notifications_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="인앱 알림"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_inapp_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:splitTrack="false"
                android:showText="false"
                android:background="@null"
                app:useMaterialThemeColors="false"
                app:trackTint="@color/switch_track_neutral"
                app:thumbTint="@color/switch_thumb_neutral"
                app:rippleColor="@android:color/transparent" />
        </LinearLayout>

        <!-- 폰트설정 카드 (XML에서 동일 스타일 적용) -->
        <LinearLayout
            android:id="@+id/card_font_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/box_notifications"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:background="@drawable/bg_theme_color_group"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_font_settings_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="폰트 설정"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"
                android:paddingBottom="8dp" />

            <RadioGroup
                android:id="@+id/rg_font_choice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/rb_font_system"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기본 폰트(시스템)"/>

                <RadioButton
                    android:id="@+id/rb_font_noto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Noto Sans KR"/>
            </RadioGroup>

            <Button
                android:id="@+id/btn_font_apply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="적용"
                android:textAllCaps="false"
                android:layout_marginTop="8dp"/>
        </LinearLayout>

        <!-- 자녀 추가 카드 (XML에서 동일 스타일 적용) -->
        <LinearLayout
            android:id="@+id/card_add_child_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/card_font_settings"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:background="@drawable/bg_theme_color_group"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_child_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="자녀 추가"
                style="?attr/materialButtonStyle"/>
        </LinearLayout>

        <!-- 로그아웃 버튼 -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_margin="16dp"
            android:backgroundTint="@color/green"
            android:text="로그아웃"
            android:textColor="@color/white" />
    </RelativeLayout>

    <!-- 사이드바 -->
    <LinearLayout
        android:id="@+id/nav_container_setting"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@android:color/darker_gray" />

    <TextView
        android:id="@+id/main_content_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />
</androidx.drawerlayout.widget.DrawerLayout>
