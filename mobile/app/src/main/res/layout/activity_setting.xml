<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout_setting"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 메인 컨텐츠 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- 툴바 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_setting"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/green"
            app:title="설정"
            app:titleTextColor="@color/white" />

        <!-- 색상 선택 그리드 -->
        <GridLayout
            android:id="@+id/color_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/toolbar_setting"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:alignmentMode="alignMargins"
            android:columnCount="4"
            android:rowCount="2"
            android:background="@drawable/bg_theme_color_group"
            android:padding="16dp" />

        <!-- 인앱 알림 카드 -->
        <LinearLayout
            android:id="@+id/box_notifications"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/color_grid"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:background="@drawable/bg_theme_color_group"
            android:padding="16dp">

            <TextView
                android:id="@+id/tv_notifications_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="인앱 알림"
                android:textSize="16sp"
                android:textColor="@android:color/black" />

            <com.google.android.material.materialswitch.MaterialSwitch
                android:id="@+id/switch_inapp_notifications"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:splitTrack="false"
                android:showText="false"
                android:background="@null"
                app:useMaterialThemeColors="false"
                app:trackTint="@color/switch_track_neutral"
                app:thumbTint="@color/switch_thumb_neutral"
                app:rippleColor="@android:color/transparent" />
        </LinearLayout>

        <!-- 자녀 추가 카드 -->
        <LinearLayout
            android:id="@+id/card_add_child_settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/box_notifications"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="12dp"
            android:orientation="vertical"
            android:background="@drawable/bg_theme_color_group"
            android:padding="16dp">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_child_settings"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="자녀 추가"
                android:includeFontPadding="false"
                android:minHeight="0dp"
                android:paddingTop="0dp"
                android:paddingBottom="0dp"
                style="?attr/materialButtonStyle"/>
        </LinearLayout>

        <!-- ▼ 네비게이션 숨기기 버튼 -->
        <ImageButton
            android:id="@+id/btn_hide_nav"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_above="@id/bottom_navigation"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:src="@android:drawable/arrow_down_float"
            android:contentDescription="네비게이션 숨기기"/>

        <!-- ▲ 네비게이션 보이기 버튼 -->
        <ImageButton
            android:id="@+id/btn_show_nav"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@null"
            android:src="@android:drawable/arrow_up_float"
            android:visibility="gone"
            android:contentDescription="네비게이션 보이기"/>

        <!-- 로그아웃 버튼 -->
        <Button
            android:id="@+id/btn_logout"
            android:layout_width="wrap_content"
            android:layout_height="44dp"
            android:layout_below="@id/toolbar_setting"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:text="로그아웃"
            android:includeFontPadding="false"
            android:minHeight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:backgroundTint="@color/green"
            android:textColor="@color/white"/>

        <!-- 하단 네비게이션 -->
        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="12dp"
            android:background="@drawable/bg_bottom_nav_rounded"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconTint="@color/nav_item_color"
            app:itemTextColor="@color/nav_item_color"
            app:labelVisibilityMode="selected"
            android:elevation="8dp"/>
    </RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
