<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 메인 컨텐츠 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- 툴바 -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:title="자녀 출석 확인"
            android:titleTextColor="@android:color/white"/>

        <!-- 자녀 선택 스피너 -->
        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/spinner_children"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="4dp"
            android:spinnerMode="dropdown"
            android:dropDownWidth="match_parent"
            android:dropDownVerticalOffset="8dp"
            android:background="@drawable/spinner_bg_with_arrow"/>

        <!-- 상단 요약: 출석/지각/결석 -->
        <LinearLayout
            android:id="@+id/summary_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingStart="8dp"
            android:paddingEnd="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="2dp"
            android:layout_marginBottom="4dp"
            android:baselineAligned="false">

            <!-- 출석 카드 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="false"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:id="@+id/img_present"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_att_present"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:contentDescription="출석 아이콘" />

                    <TextView
                        android:id="@+id/tv_present_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="출석 0"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#212121" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 지각 카드 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_marginEnd="4dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="false"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:id="@+id/img_late"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_att_late"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:contentDescription="지각 아이콘" />

                    <TextView
                        android:id="@+id/tv_late_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="지각 0"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#212121" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 결석 카드 -->
            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="40dp"
                android:layout_weight="1"
                app:cardUseCompatPadding="false"
                app:cardElevation="2dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@android:color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="6dp"
                    android:paddingEnd="6dp"
                    android:paddingTop="4dp"
                    android:paddingBottom="4dp">

                    <ImageView
                        android:id="@+id/img_absent"
                        android:layout_width="18dp"
                        android:layout_height="18dp"
                        android:src="@drawable/ic_att_absent"
                        android:adjustViewBounds="true"
                        android:scaleType="centerInside"
                        android:contentDescription="결석 아이콘" />

                    <TextView
                        android:id="@+id/tv_absent_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:text="결석 0"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:textColor="#212121" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- 출석 리스트 (summary_box의 '형제') -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/attendance_list_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp" />

    </LinearLayout>

    <!-- 사이드바 -->
    <LinearLayout
        android:id="@+id/nav_container"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/white" />
</androidx.drawerlayout.widget.DrawerLayout>
