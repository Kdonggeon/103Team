<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 툴바 -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/green"
        app:title="시간표"
        app:titleTextColor="@color/white" />

    <!-- 자녀 선택 스피너 -->
    <androidx.appcompat.widget.AppCompatSpinner
        android:id="@+id/spinner_children"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@id/toolbar"
        android:layout_margin="12dp"
        android:spinnerMode="dropdown"
        android:background="@drawable/spinner_bg_with_arrow" />

    <!-- 오늘 수업 목록 RecyclerView -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_today_attendance"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/spinner_children"
        android:layout_above="@id/bottom_navigation"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:clipToPadding="false"
        tools:listitem="@layout/item_timetable" />

    <!-- ▼ 네비게이션 숨기기 버튼 -->
    <ImageButton
        android:id="@+id/btn_hide_nav"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_above="@id/bottom_navigation"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@android:drawable/arrow_down_float"
        android:contentDescription="네비게이션 숨기기" />

    <!-- ▲ 네비게이션 보이기 버튼 -->
    <ImageButton
        android:id="@+id/btn_show_nav"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@null"
        android:src="@android:drawable/arrow_up_float"
        android:visibility="gone"
        android:contentDescription="네비게이션 보이기" />

    <!-- 🔹 하단 네비게이션 바 -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="12dp"
        android:background="@drawable/bg_bottom_nav_rounded"
        app:menu="@menu/bottom_nav_menu"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:labelVisibilityMode="selected"
        android:elevation="8dp"/>

</RelativeLayout>
