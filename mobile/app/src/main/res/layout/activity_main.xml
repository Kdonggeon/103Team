<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 🔹 메인 컨텐츠 화면 -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background_light">

        <!-- 🔹 메인 스크롤 영역 -->
        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@id/bottom_navigation"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- 🔹 상단 앱 로고 + 프로그램 이름 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:padding="16dp">

                    <LinearLayout
                        android:id="@+id/logoLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivLogo"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/logo"
                            android:contentDescription="앱 로고" />

                        <TextView
                            android:id="@+id/tvAppTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="G.A.P"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <!-- 🔹 우상단 아이콘 -->
                    <LinearLayout
                        android:id="@+id/topIcons"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentEnd="true"
                        android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/btnSettings"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:src="@drawable/ic_settings_light"
                            android:layout_marginEnd="12dp"
                            android:contentDescription="설정" />

                        <FrameLayout
                            android:layout_width="32dp"
                            android:layout_height="32dp">

                            <ImageView
                                android:id="@+id/btnNotifications"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_notice"
                                android:contentDescription="알림" />

                            <!-- 🔹 알림 배지 -->
                            <TextView
                                android:id="@+id/tvBadge"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:minWidth="18dp"
                                android:minHeight="18dp"
                                android:padding="2dp"
                                android:gravity="center"
                                android:layout_gravity="end|top"
                                android:background="@drawable/bg_badge"
                                android:text="3"
                                android:textSize="10sp"
                                android:textStyle="bold"
                                android:textColor="@android:color/white"
                                android:translationX="2dp"
                                android:translationY="-4dp"
                                android:visibility="gone" />
                        </FrameLayout>
                    </LinearLayout>
                </RelativeLayout>

                <!-- 🔹 자녀 선택 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/tvSelectedChild"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="자녀 선택 님"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:layout_marginEnd="8dp" />

                    <ImageView
                        android:id="@+id/btnAttendance"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_arrow_down"
                        android:contentDescription="자녀 선택"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?android:attr/selectableItemBackgroundBorderless"/>
                </LinearLayout>

                <!-- 🔹 출석/지각/결석 통계 카드 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/bg_card"
                    android:elevation="4dp"
                    android:padding="16dp"
                    android:layout_margin="16dp">

                    <TextView
                        android:id="@+id/tvAttend"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="출석: 0"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvLate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="지각: 0"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />

                    <TextView
                        android:id="@+id/tvAbsent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="결석: 0"
                        android:textSize="16sp"
                        android:layout_marginStart="16dp" />
                </LinearLayout>

                <!-- 🔹 QnA 최근 답변 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:elevation="4dp"
                    android:padding="16dp"
                    android:layout_marginHorizontal="16dp"
                    android:layout_marginBottom="8dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="최근 QnA 답변"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- 🔹 QnA 상세보기 (QuestionsActivity 이동) -->
                        <ImageView
                            android:id="@+id/btnMoreQna"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_alignParentEnd="true"
                            android:contentDescription="QnA 페이지 이동"
                            android:clickable="true"
                            android:focusable="true"/>
                    </RelativeLayout>

                    <!-- 🔹 QnA 최근 2개 블록 -->
                    <LinearLayout
                        android:id="@+id/blockQna1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_notice_item"
                        android:padding="10dp"
                        android:layout_marginBottom="12dp">
                        <TextView
                            android:id="@+id/tvQna1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="· 최근 답변 없음"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/blockQna2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_notice_item"
                        android:padding="10dp">
                        <TextView
                            android:id="@+id/tvQna2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="· 최근 답변 없음"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>


                <!-- 🔹 공지사항 최근 4개 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/bg_card"
                    android:elevation="4dp"
                    android:padding="16dp"
                    android:layout_margin="16dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="📢 최근 공지사항"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <!-- 🔹 공지사항 바로가기 -->
                        <ImageView
                            android:id="@+id/btnMoreNotice"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_arrow_right"
                            android:layout_alignParentEnd="true"
                            android:contentDescription="공지사항 페이지 이동"
                            android:clickable="true"
                            android:focusable="true"/>
                    </RelativeLayout>

                    <!-- 🔹 공지 블록들 (둥근 카드 적용) -->
                    <LinearLayout
                        android:id="@+id/blockNotice1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_notice_item"
                        android:padding="10dp"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="2dp">
                        <TextView
                            android:id="@+id/tvNotice1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="· 공지 1"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/blockNotice2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_notice_item"
                        android:padding="10dp"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="2dp">
                        <TextView
                            android:id="@+id/tvNotice2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="· 공지 2"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/blockNotice3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_notice_item"
                        android:padding="10dp"
                        android:layout_marginBottom="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="2dp">
                        <TextView
                            android:id="@+id/tvNotice3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="· 공지 3"
                            android:textSize="16sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/blockNotice4"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/bg_notice_item"
                        android:padding="10dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:elevation="2dp">
                        <TextView
                            android:id="@+id/tvNotice4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="· 공지 4"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="12dp"
            android:background="@drawable/bg_bottom_nav_rounded"
            app:menu="@menu/bottom_nav_menu"
            app:itemIconTint="@color/nav_item_color"
            app:itemTextColor="@color/nav_item_color"
            app:labelVisibilityMode="selected"
            android:elevation="8dp"/>

    </RelativeLayout>

    <!-- 🔹 드로어 네비게이션 메뉴 -->
    <LinearLayout
        android:id="@+id/nav_container"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:orientation="vertical"
        android:background="@color/gray"/>

</androidx.drawerlayout.widget.DrawerLayout>
