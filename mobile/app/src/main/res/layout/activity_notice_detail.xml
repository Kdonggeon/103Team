<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_notice_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.notice.NoticeDetailActivity">

    <!-- 상단 툴바 + 콘텐츠 컨테이너 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_notice_detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="공지사항 상세"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="?attr/homeAsUpIndicator" />

        <!-- 내용 스크롤 영역: fillViewport + 가변 여백으로 꼬리말 고정 -->
        <ScrollView
            android:id="@+id/scroll_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:padding="16dp"
            android:fillViewport="true">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 제목: '제목:' 라벨 + 값 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tv_detail_title_label"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="제목:"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:layout_marginEnd="8dp"/>

                    <TextView
                        android:id="@+id/tv_detail_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:ellipsize="end"
                        android:singleLine="true"/>
                </LinearLayout>

                <!-- 구분선 -->
                <View
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <!-- 내용 -->
                <TextView
                    android:id="@+id/tv_detail_content"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- 구분선 -->
                <View
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <!-- 남는 공간을 차지해서 꼬리말(작성자/작성일)을 항상 맨 아래로 밀어냄 -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <!-- 꼬리말: 작성자(왼쪽 아래) / 작성일(오른쪽 아래) -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <!-- 작성자: 왼쪽 아래 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="start|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_detail_author_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="작성자:"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/tv_detail_author"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary"/>
                    </LinearLayout>

                    <!-- 작성일: 오른쪽 아래 -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="end|bottom"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tv_detail_date_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="작성일:"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/tv_detail_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="14sp"
                            android:textColor="?android:attr/textColorSecondary"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <!-- 버튼 바 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="16dp"
            style="?android:attr/buttonBarStyle">

            <Button
                android:id="@+id/btn_edit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="수정" />

            <Button
                android:id="@+id/btn_delete"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="삭제" />
        </LinearLayout>

    </LinearLayout>

    <!-- 네비게이션 메뉴 컨테이너 -->
    <LinearLayout
        android:id="@+id/nav_container_notice_detail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</androidx.drawerlayout.widget.DrawerLayout>
