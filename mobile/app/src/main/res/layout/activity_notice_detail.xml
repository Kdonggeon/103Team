<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout_notice_detail"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NoticeDetailActivity">

    <!-- 상단 툴바: 기본 홈업 아이콘으로 뒤로가기 버튼 표시 -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_notice_detail"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:title="공지사항 상세"
            app:titleTextColor="@android:color/white"
            app:navigationIcon="?attr/homeAsUpIndicator"
            />

        <ScrollView
            android:padding="16dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- 제목 -->
                <TextView
                    android:id="@+id/tv_detail_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <!-- 작성일 -->
                <TextView
                    android:id="@+id/tv_detail_date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary" />

                <!-- 작성자 -->
                <TextView
                    android:id="@+id/tv_detail_author"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary" />

                <!-- 구분선 -->
                <View
                    android:layout_marginTop="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />

                <!-- 내용 -->
                <TextView
                    android:id="@+id/tv_detail_content"
                    android:layout_marginTop="16dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </ScrollView>
    </LinearLayout>

    <!-- 네비게이션 메뉴 컨테이너 -->
    <LinearLayout
        android:id="@+id/nav_container_notice_detail"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical" />

</androidx.drawerlayout.widget.DrawerLayout>
