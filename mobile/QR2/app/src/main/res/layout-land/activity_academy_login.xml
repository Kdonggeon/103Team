<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#65E478"> <!-- ✅ 전체 초록색 배경 -->

    <!-- ✅ 흰색 둥근 바탕 (QR 스타일 동일) -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="36dp"
        android:orientation="horizontal"
        android:background="@drawable/bg_white_round_container"
        android:elevation="12dp"
        android:padding="40dp"
        android:gravity="center">

        <!-- ✅ 왼쪽: 로고 -->
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="340dp"
            android:layout_height="300dp"
            android:layout_marginEnd="80dp"
            android:src="@drawable/logo"
            android:contentDescription="로고"
            android:scaleType="fitCenter"
            android:layout_gravity="center_vertical" />

        <!-- ✅ 오른쪽: 로그인 영역 (박스 없이) -->
        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp"
            android:gravity="center_horizontal">

            <!-- 제목 -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/bg_login_label"
                android:paddingLeft="36dp"
                android:paddingRight="36dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="학원 로그인"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginBottom="22dp" />

            <!-- 학원 아이디 -->
            <EditText
                android:id="@+id/edit_academy_id"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/input_field"
                android:hint="학원 아이디"
                android:padding="12dp"
                android:textColor="#111827"
                android:textColorHint="#A3A3A3" />

            <!-- 비밀번호 -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:background="@drawable/input_field"
                android:layout_marginBottom="14dp">

                <EditText
                    android:id="@+id/edit_academy_pw"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="비밀번호"
                    android:paddingLeft="12dp"
                    android:paddingRight="40dp"
                    android:background="@android:color/transparent"
                    android:inputType="textPassword"
                    android:textColor="#111827"
                    android:textColorHint="#A3A3A3"
                    android:singleLine="true" />

                <ImageView
                    android:id="@+id/btn_toggle_pw"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginEnd="10dp"
                    android:src="@drawable/eye_off"
                    android:clickable="true"
                    android:focusable="true" />
            </RelativeLayout>

            <!-- 학원 번호 -->
            <EditText
                android:id="@+id/edit_academy_number"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:layout_marginBottom="14dp"
                android:background="@drawable/input_field"
                android:hint="학원 번호"
                android:padding="12dp"
                android:textColor="#111827"
                android:textColorHint="#A3A3A3" />

            <!-- 로그인 버튼 -->
            <Button
                android:id="@+id/btn_academy_login"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:text="로그인"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:backgroundTint="@color/green2"
                android:layout_marginBottom="14dp" />

            <!-- 로그인 상태 유지 -->
            <CheckBox
                android:id="@+id/chk_auto_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그인 상태 유지"
                android:textColor="#111827" />
        </LinearLayout>

    </LinearLayout>

</FrameLayout>
