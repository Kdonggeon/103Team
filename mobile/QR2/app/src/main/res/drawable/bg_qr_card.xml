<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- 흰색 배경 -->
    <solid android:color="@android:color/white" />

    <!-- 살짝 둥근 모서리 -->
    <corners android:radius="16dp" />

    <!-- 연한 초록색 테두리 -->
    <stroke
        android:width="2dp"
        android:color="#A7EFC4" />

    <!-- 살짝 그림자 효과 (Android 9 이하에서 elevation 대체용) -->
    <padding
        android:left="2dp"
        android:top="2dp"
        android:right="2dp"
        android:bottom="2dp" />
</shape>
